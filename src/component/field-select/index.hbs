<div class="field field--select">
	<span class="field__label">{{label}}</span>

	{{!-- <div onclick="fieldSelect.toggle(this);
	{{action}}('{{name}}', this.hasAttribute('active'));" class="field__wrapper"> --}}

		<div class="field__container">
			<button onclick="fieldSelect.toggle(this);
	{{action}}('{{name}}', this.hasAttribute('active'));" type="button" class="fild__select validation" name="{{name}}">
				<span class=" field__value field__value--placeholder">{{placeholder}}</span>
				<span class="field__icon"></span>
			</button>
			<ul class="field__option-list">
				{{#each list}}
				<li onclick="fieldSelect.change(this);
				{{../action}}('{{../name}}', {{value}});" class="field__option">
					{{text}}
				</li>
				{{/each}}
			</ul>
		</div>
	</div>